{
  "$id": "registry-entry-config.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "name",
    "metadata"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 80
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/metadataNode"
      }
    }
  },
  "definitions": {
    "metadataNode": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/metadataNode"
          }
        }
      ]
    }
  }
}
